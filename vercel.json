{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.mjs"
    },
    {
      "src": "/translations/(.*)",
      "dest": "server.mjs"
    },
    {
      "src": "/(.*\\.(css|mjs|js|png|jpg|webp|svg|ico|woff|woff2|ttf|eot|json))",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}
